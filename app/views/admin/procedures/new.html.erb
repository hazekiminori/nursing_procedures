<div class = "container">
  <h4>手順新規登録</h4>
<%#= form_with model: [@procedure, @change] do |f| %>
  <%#= f.text_area :change, rows:'5', placeholder: "変更。追加点をここに" %>
  <%#= f.submit "送信する" %>
<%# end %>
  <%= form_with model: @procedure, local: true, url: admin_procedures_path, method: :post do |f| %>
        <div>
            <%= f.label :title, "手順タイトル" %>
            <%= f.text_field :title %>
        </div>
        <div>
            <%= f.label :image, "物品配置画像" %>
            <%= f.file_field :image %>
        </div>
        <div class="form_input">
            <%= f.label :necessity_item, "必要物品" %>
            <%= f.text_area :necessity_item %>
        </div>
        <div class="form_input">
            <%= f.label :procedure, "手順" %>
            <%= f.text_area :body %>
        </div>
        <div class="form_input">
            <%= f.label :category_id, "カテゴリー選択" %>
            <%= f.collection_select :category_id, Category.all, :id, :name,
                                                            :include_blank => "カテゴリを選択してください" %>
        </div>
        <div class="form_action row">
            <%= f.submit "作成する" %>
        </div>
    <% end %>
</div>