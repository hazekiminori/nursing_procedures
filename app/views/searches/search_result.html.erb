<h2>Results index</h2>

<table class="table table-hover table-inverse">
  <!--検索対象モデルがUserの時 -->
  <% if @range == "Category" %>
    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.name %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <!--検索対象モデルがUserではない時(= 検索対象モデルがBookの時) -->
    <tbody>
      <% @procedures.each do |procedure| %>
        <tr>
          <td><%= procedure.title %></td>
          <td><%= procedure.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>