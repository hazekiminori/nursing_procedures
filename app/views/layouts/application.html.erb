<!DOCTYPE html>
<html>
  <head>
    <title>Portfolio</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Kaushan+Script" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css">
    <link rel="stylesheet" href="application.css">
    <script src="https://kit.fontawesome.com/a17d38e09f.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
          <span>
            <%= link_to root_path do %>
              <i class="fa-solid fa-book-medical"></i>
                Nursing procedures
            <% end %>
          </span>
            <button class="navbar-toggler"
                    type="button"
                    data-toggle="collapse"
                    data-target="#navbarNavDropdown"
                    aria-controls="navbarNavDropdown"
                    aria-expanded="false"
                    aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
              <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav ml-auto">
                  <% if user_signed_in? %>
                    <li class="nav-item mr-1" >
                      <%= link_to categories_path, class: "btn btn-primary" do %>
                        カテゴリー一覧
                      <% end %>  
                    </li>
                    <li class="nav-item mr-1">
                      <%= link_to bookmarks_path, class: "btn btn-primary" do %>
                        ブックマーク一覧
                      <% end %>
                    </li>
                    <li class="nav-item mr-1">
                      <%= link_to procedures_path, class: "btn btn-primary" do %>
                        手順一覧
                      <% end %>
                    </li>
                    <li class="nav-item mr-1">
                      <%= link_to new_procedure_path, class: "btn btn-primary" do %>
                        手順作成
                      <% end %>
                    </li>
                    <li class="nav-item mr-1">
                      <%= link_to my_page_path, class: "btn btn-primary" do %>
                        マイページ
                      <% end %>
                    </li>
                    <li class="nav-item mr-1">
                      <%= link_to destroy_user_session_path, method: :delete, class: "btn btn-primary" do %>
                        ログアウト
                      <% end %>
                    </li>

                      <%= render 'searches/search' %>

                  <% elsif admin_signed_in? %>
                    <li class="nav-item mr-1">
                      <%= link_to admin_categories_path, class: "btn btn-primary" do %>
                        カテゴリー一覧
                      <% end %>
                    </li>
                    <li class="nav-item mr-1">
                      <%= link_to admin_users_path, class: "btn btn-primary" do %>
                        利用者一覧
                      <% end %>
                    </li>
                    <li class="nav-item mr-1">
                      <%= link_to destroy_admin_session_path, method: :delete, class: "btn btn-primary" do %>
                        ログアウト
                      <% end %>
                    </li>

                      <%= render 'searches/search' %>

                  <% else %>
                    <li class="nav-item mr-1">
                      <%= link_to categories_path, class: "btn btn-primary" do %>
                       カテゴリー一覧
                      <% end %>
                    </li>
                    <li class="nav-item mr-1">
                      <%= link_to new_user_registration_path, class: "btn btn-primary" do %>
                        新規作成
                      <% end %>
                    </li>
                    <li class="nav-item mr-1">
                      <%= link_to user_session_path, class: "btn btn-primary" do %>
                        ログイン
                      <% end %>
                    </li>
                  <% end %>
                </ul>
              </div>
        </div>
      </nav>
    </header>
    <main>
      <div class="container">
        <%= flash[:notice] %><%= alert %>
        <%= yield %>
      </div>
    </main>
    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto"></div>
        </div>
      </div>
    </footer>
  </body>
</html>
